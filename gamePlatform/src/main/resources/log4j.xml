<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- develop debug-->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p [%t] %C{2}[%M] (%F:%L) - ##%m%n"/>
        </layout>
    </appender>
    
       
    <appender name="controllerLog" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/data/server/logs/platform/controller.log"/>
        <param name="Append" value="true"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <param name="Threshold" value="info"/>
        <param name="Encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p [%t] %C{2}[%M] (%F:%L) - ##%m%n"/>
        </layout>
    </appender>

    <category name="com.buding.hall.controller">
        <priority value="info"/>
        <appender-ref ref="controllerLog"/>
    </category>
    
    
    <!--错误级别日志汇总-->
    <appender name="dataLog" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/data/server/logs/platform/info.log"/>
        <param name="Append" value="true"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <param name="Threshold" value="info"/>
        <param name="Encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p [%t] %C{2}[%M] (%F:%L) - ##%m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMax" value="ERROR"/>
            <param name="LevelMin" value="INFO"/>
        </filter>
    </appender>
    
     <!--错误级别日志汇总-->
    <appender name="errorLog" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/data/server/logs/platform/error.log"/>
        <param name="Append" value="true"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <param name="Threshold" value="info"/>
        <param name="Encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p [%t] %C[%M] (%F:%L) - ##%m%n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMax" value="ERROR"/>
            <param name="LevelMin" value="WARN"/>
        </filter>
    </appender>

    <logger name="com.ibatis" additivity="true"> 
  		<level value="WARN" /> 
 	</logger> 
 	<logger name="java.sql.Connection" additivity="true"> 
  		<level value="WARN" /> 
 	</logger> 
 	<logger name="java.sql.Statement" additivity="true"> 
  		<level value="WARN" /> 
 	</logger> 
 	<logger name="java.sql.PreparedStatement" additivity="true"> 
  		<level value="WARN" /> 
 	</logger> 
 	<logger name="java.sql.ResultSet" additivity="true"> 
  		<level value="WARN" /> 
 	</logger>
 	<logger name="com.alibaba.dubbo" additivity="true"> 
  		<level value="WARN" /> 
 	</logger>
 	
    <!-- root -->
    <root>
        <appender-ref ref="dataLog"/>
        <appender-ref ref="errorLog"/>
        <appender-ref ref="console"/>
        <priority value="info"/>
    </root>

</log4j:configuration>
